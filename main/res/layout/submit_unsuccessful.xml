<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/actionerror"
        android:layout_width="196dp"
        android:layout_height="95dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@android:string/dialog_alert_title"
        app:layout_constraintBottom_toTopOf="@+id/error_statement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_error" />

    <TextView
        android:id="@+id/error_statement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/submission_unsuccessful"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="12pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionerror" />
</androidx.constraintlayout.widget.ConstraintLayout>